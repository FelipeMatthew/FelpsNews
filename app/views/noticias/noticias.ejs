<%- include('../common/header')%>
<%- include('../common/menu')%>

<main class="mb-4">
    <div class="bg-light p-5 mb-4">
        <div class="container text-center">
            <h1>Notícias</h1>
        </div>
    </div>




    <div class="container">

            <div class="row mb-5">
                <form action="/busca" method="post">
                    <div class="mb-3">
                        <label for="titulo"><h5>Buscar noticias:</h5></label>
                        <input type="text" class="form-control" name="pesquisa">
                        <input type="submit" class="btn btn-primary mt-2" value="Enviar">
                    </div>
                    <label for="text text-muted">
                        <%= noticias.length %> noticias encontradas 
                    </label>
                </form>
            </div>

            <% if(noticias.length > 0) { %>
                <% for (let i = 0;  i < noticias.length; i++) { %>
                    <div class="col">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                    <h5 class="card-title"> <%= noticias[i].titulo%> </h5>
                                    <p class="card-text"> <%= noticias[i].resumo%> </p>
                                    <p class="card-text"> <small class="text-muted"><%= noticias[i].data_criacao.toLocaleString('pt-br').split(' ').join (' às ')%>  </small></p>
    
                                    <a href="noticia?id_noticias=<%=noticias[i].id_noticias%>" class="btn btn-primary">Saiba mais</a>
                            </div>
                        </div>
                    </div>
                <% } %> 
            <% } %> 
        </div>
    </div>
</main>

<%- include('../common/footer')%>