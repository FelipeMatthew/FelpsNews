<%- include('../common/header')%>
<%- include('../common/menu')%>

<main class="mb-4">
    <div class="bg-light p-5 mb-4">
        <div class="container text-center">
            <h1>Nova notícia</h1>
        </div>
    </div>

    <div class="container">
        <% if(validacao.length > 0){ %>
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-danger">
                        <strong>Atenção</strong>
                        <ul>
                            <% for(let i = 0; i< validacao.length; i++){ %> 
                                <li><%= validacao[i].msg %></li>
                            <% } %> 
                        </ul>
                    </div>
                </div>
            </div>
            
        <% } %>
    </div>

    <div class="container">
        <form action="/noticias/salvar" method="POST">
            <div class="mb-3">
                <label for="titulo">Título:</label>
                <input type="text" id="titulo" name="titulo" class="form-control" placeholder="Título da notícia" value="<%=noticia.titulo%>">
            </div>

            <div class="mb-3">
                <label for="pwd">Resumo:</label>
                <input type="text" id="resumo" name="resumo" class="form-control" placeholder="Resumo da notícia" value="<%=noticia.resumo%>">
            </div>

            <div class="mb-3">
                <label for="pwd">Autor:</label>
                <input type="text" id="autor" name="autor" class="form-control" placeholder="Autor da notícia" value="<%=noticia.autor%>">
            </div>

            <div class="mb-3">
                <label for="pwd">Data:</label>
                <input type="date" id="data_noticia" name="data_noticia" class="form-control" placeholder="Data da notícia" value="<%=noticia.data_noticia%>">
            </div>

            <div class="mb-3">
                <label for="pwd">Noticia:</label>
                <textarea id="noticia" name="noticia" class="form-control" value="<%=noticia.noticia%>"></textarea>
            </div>

            <div class="container">         
                <div class="d-flex justify-content-center mt-5">
                    <button type="submit" class="btn btn-primary">Cadastrar noticia</button>           
                </div>      
            </div>
        </form>
    </div>
</main>
<%- include('../common/footer')%>